<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class="menu nav nav-pills nav-justified">
      <li class="nav-link"><%= link_to "Timeline", timeline_path %></li>
      <li class="nav-link"><%= link_to "Users", users_path %></li>
      <% if current_user  %>
        <li class="nav-link"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li class="nav-link"><%= link_to "Sign In", new_user_session_path %> </li>
      <% end %>
    </ul>
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>

<div class="row">
  <div class="user_profile col-4">

    <%= image_tag "user_icon.png", width: "100px"%>
    <br>
    <p>@<%= user.username %></p>
    <p><%= user.full_name %></p>
    <p><%= user.city %>, <%= user.state %></p>
    <br>
    <p><%= user.bio %></p>
  </div>

  <div class="message_list col-8">
  <% user.messages.each do |messages| %>
    <div class="message">
      <%= image_tag "user_icon.png", width: "50px"%>
      <p><%= messages.body %></p>
      <p class="message_time"><%= time_ago_in_words(messages.created_at) %></p>
    </div>
  <% end %>
  </div>
</div>
